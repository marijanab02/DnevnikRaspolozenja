<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kako se osje캖a코 danas?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <!-- Mood Score Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tvoje raspolo쬰nje (1-5)"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp"/>

    <!-- Mood Score Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnMood1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="游땩\n1"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:backgroundTint="#E57373"/>

        <Button
            android:id="@+id/btnMood2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="游륲n2"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FFB74D"/>

        <Button
            android:id="@+id/btnMood3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="游땛\n3"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FFF176"/>

        <Button
            android:id="@+id/btnMood4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="游뗵\n4"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:backgroundTint="#AED581"/>

        <Button
            android:id="@+id/btnMood5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="游땏\n5"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:backgroundTint="#81C784"/>
    </LinearLayout>

    <!-- Selected Mood Display -->
    <TextView
        android:id="@+id/tvSelectedMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odabrano: Nije odabrano"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginBottom="24dp"/>

    <!-- Note Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bilje코ka (opciono)"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Napi코i kako se osje캖a코..."
        android:gravity="top|start"
        android:padding="12dp"
        android:background="@android:color/white"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:maxLines="5"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveMood"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Spremi Mood"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"/>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>