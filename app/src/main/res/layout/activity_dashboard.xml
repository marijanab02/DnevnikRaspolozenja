<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboardRoot"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#B3E5FC">



    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="191dp"
        android:layout_height="122dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="248dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="137dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:alpha="0.5"
        android:rotation="5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.4"
        android:rotation="-10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-30dp"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud4"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="150dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud5"
        android:layout_width="191dp"
        android:layout_height="122dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="88dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobrodošli"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/addMoodBtn"
        android:layout_width="274dp"
        android:layout_height="63dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#4CAF50"
        android:padding="16dp"
        android:text="Dodaj Raspoloženje"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/viewMoodHistoryBtn"
        android:layout_width="253dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF9800"
        android:padding="16dp"
        android:text="Pregled Raspoloženja"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMoodBtn" />

    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="196dp"
        android:layout_height="54dp"
        android:layout_marginTop="364dp"
        android:backgroundTint="#0288D1"
        android:padding="12dp"
        android:text="Uredi profil"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>
