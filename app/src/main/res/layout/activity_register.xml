<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#B3E5FC"
    tools:context="ba.sum.fsre.dnevnikraspolozenja.activities.RegisterActivity">


    <ImageView
        android:id="@+id/cloud"
        android:layout_width="191dp"
        android:layout_height="122dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="248dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="137dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="592dp"
        android:alpha="0.5"
        android:rotation="5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud13"
        android:layout_width="137dp"
        android:layout_height="77dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="604dp"
        android:alpha="0.5"
        android:rotation="5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="4dp"
        android:alpha="0.4"
        android:rotation="-10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-30dp"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud10"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="12dp"
        android:alpha="0.4"
        android:rotation="-10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-30dp"
        android:translationY="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="428dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud7"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="416dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud14"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="432dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud6"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="72dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud11"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="52dp"
        android:alpha="0.3"
        android:rotation="15"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/cloud4"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:alpha="0.45"
        android:rotation="-5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="20dp"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@+id/cloud1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud8"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:alpha="0.45"
        android:rotation="-5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="20dp"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@+id/cloud1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud5"
        android:layout_width="191dp"
        android:layout_height="122dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="88dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud12"
        android:layout_width="191dp"
        android:layout_height="122dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="108dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- LOGO -->
    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo2" />
    </androidx.cardview.widget.CardView>

    <!-- NASLOV -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registracija"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0288D1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/logoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- AVATAR VIEWPAGER -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/avatarViewPager"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="100dp"
        android:paddingEnd="100dp"/>

    <!-- EMAIL -->
    <EditText
        android:id="@+id/emailInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:hint="Email adresa"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#0288D1"
        android:textColorHint="#0288D1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarViewPager" />

    <!-- IME I PREZIME -->
    <EditText
        android:id="@+id/fullNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:hint="Ime i prezime"
        android:padding="16dp"
        android:textColor="#0288D1"
        android:textColorHint="#0288D1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInput" />

    <!-- DATUM ROĐENJA -->
    <EditText
        android:id="@+id/dobInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:clickable="true"
        android:focusable="false"
        android:hint="Datum rođenja (YYYY-MM-DD)"
        android:padding="16dp"
        android:textColor="#0288D1"
        android:textColorHint="#0288D1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/fullNameInput" />

    <!-- LOZINKA -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:hint="Lozinka"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#0288D1"
        android:textColorHint="#0288D1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dobInput" />

    <!-- POTVRDA LOZINKE -->

    <EditText
        android:id="@+id/confirmPasswordInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:hint="Potvrdi lozinku"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#0288D1"
        android:textColorHint="#0288D1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput" />

    <CheckBox
        android:id="@+id/termsCheckbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms of Use and Privacy Policy"
        android:textColor="#0288D1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacyText"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/termsCheckbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/termsLink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Terms of Use"
            android:textColor="#0288D1"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:text=" | "
            android:textColor="#0288D1"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/privacyLink"
            android:text="Privacy Policy"
            android:textColor="#0288D1"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


    <!-- REGISTER BUTTON -->
    <Button
        android:id="@+id/registerBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registriraj se"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0288D1"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/privacyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/backToLoginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Već imate račun? Prijavite se"
        android:textSize="14sp"
        android:textColor="#717571"
        android:textStyle="bold"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/registerBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>


    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>