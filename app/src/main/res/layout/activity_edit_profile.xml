    <ImageView
        android:id="@+id/cloud4"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="4dp"
        android:alpha="0.45"
        android:rotation="-5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="20dp"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@+id/cloud1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud8"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:alpha="0.45"
        android:rotation="-5"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="20dp"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@+id/cloud1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloud5"
        android:layout_width="116dp"
        android:layout_height="79dp"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="88dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cloud12"
        android:layout_width="137dp"
        android:layout_height="95dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.35"
        android:rotation="10"
        android:scaleType="fitXY"
        android:src="@drawable/cloud"
        android:translationX="30dp"
        android:translationY="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Uredi profil"
        android:textColor="#0288D1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fullNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ime i prezime"
        android:padding="16dp"
        android:background="@drawable/input_background"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"/>

    <EditText
        android:id="@+id/dobInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Datum roÄ‘enja (YYYY-MM-DD)"
        android:padding="16dp"
        android:background="@drawable/input_background"
        app:layout_constraintTop_toBottomOf="@+id/fullNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/saveProfileBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spremi promjene"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0288D1"
        app:layout_constraintTop_toBottomOf="@+id/dobInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Novi gumb Odustani -->
    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Odustani"
        android:textColor="#FFFFFF"
        android:backgroundTint="#81D4FA"
        app:layout_constraintTop_toBottomOf="@+id/saveProfileBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cancelBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
