        <!-- Boja za overflow meni -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="popupMenuStyle">@style/BlueOverflowMenu</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
