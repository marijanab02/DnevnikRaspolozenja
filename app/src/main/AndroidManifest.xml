<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="CalmPath"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DnevnikRaspolozenja">
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.MoodCalendarActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.MoodListActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.CreateMoodActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.EditProfileActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.DashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.AddMentalTaskActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.AdminDashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.MentalTaskListActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="ba.sum.fsre.dnevnikraspolozenja.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="ba.sum.fsre.dnevnikraspolozenja.notifications.MoodNotificationReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>